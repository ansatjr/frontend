{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "@features/*": ["./features", "./features/*"],
      "@lib/*": ["./lib", "./lib/*"],
      "@ui/*": ["./ui", "./ui/*"],
      "@api/*": ["./api", "./api/*"],
      "@pages/*": ["./pages", "./pages/*"]
    }
  }
}
